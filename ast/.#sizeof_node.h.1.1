#ifndef __OG_AST_SIZEOF_NODE_H__
#define __OG_AST_SIZEOF_NODE_H__

#include <cdk/ast/unary_operation_node.h>
#include <cdk/ast/sequence_node.h>


namespace og {
  /**
   * Class for describing sizeof instruction nodes.
   */

  class sizeof_node: public cdk::unary_operation_node{
    cdk::sequence_node *_arguments;

  public:
    inline sizeof_node(int lineno, cdk::sequence_node *arguments) :
      cdk::unary_operation_node(lineno),_arguments(arguments) {
  }

  public:

    inline cdk::sequence_node *arguments() {
        return _arguments;
      }

    void accept(basic_ast_visitor *sp, int level) {
      sp->do_sizeof_node(this,level);
    }

  };
}

#endif

